<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center|left"
    android:background="@color/half_transparent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/icon_bright_big"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:textSize="13sp"
        android:layout_margin="10dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/icon_bright"/>

    <SeekBar
        style="@android:style/Widget.Holo.SeekBar"
        android:id="@+id/iso_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/icon_bright_big"
        android:layout_toLeftOf="@+id/icon_bright_small"
        />

    <ImageView
        android:id="@+id/icon_bright_small"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_margin="10dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/icon_bright"/>

</RelativeLayout>
